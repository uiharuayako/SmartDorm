/*首页跑马灯效果开始*/
.container_marquee {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
}
 
.scrolltxt {
  padding: 0rpx;
  background: #FF7F2D;
}
 
.marquee_box {
  position: relative;
  height: 60rpx;
  display: block;
  overflow: hidden;
}
 
.marquee_text {
  color: #fff;
  font-size: 26rpx;
  display: inline-block;
  white-space: nowrap;
  animation-name: around;
  animation-duration: 10s;
  /*过渡时间*/
  animation-iteration-count: infinite;
  animation-timing-function: linear;
  height: 60rpx;
  line-height: 60rpx;
}
 
/*首页跑马灯效果*/
@keyframes around {
  from {
    margin-left: 100%;
  }
 
  to {
    /* var接受传入的变量 */
    margin-left: 0;
  }
}
/*首页跑马灯效果结束*/
.title{
  text-align: center;
  font-size: xx-large;
  color: darkblue;
  border-style: solid;
  border-radius: 5rpx;
  margin-top: 20px;
}
.username{
  animation: colorkira 0.1s infinite;
  animation-timing-function: linear;
}
.kira{
  animation: kirakira 1s infinite;
  animation-timing-function: linear;
}
/*kirakira!!*/
@keyframes kirakira {
  0% {
    opacity: 100%;
  }
 
  50% {
   opacity: 60%;
  }

  100% {
    opacity: 100%;
   }
}
/*变色*/
@keyframes colorkira {
  from {
    color: red;
  }
 
  to {
   color: yellow;
  }
}
